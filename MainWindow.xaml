<Window x:Class="ClassWork25042024Ver2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork25042024Ver2"
        mc:Ignorable="d"
        Title="Messenger" Height="800" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ListBox x:Name="Messages" Background="#FFE7FDF7" Foreground="#FF085F39" FontFamily="Century Gothic" FontSize="16"></ListBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="MessageText" Grid.Column="0" TextWrapping="Wrap" Text="Введите сообщение" FontFamily="Century Gothic" FontSize="16" Foreground="#FF085F39" Background="#FFE7FDF7" Padding="5,10,0,0"/>
            <Button x:Name="SendButton" Grid.Column="1" Content="->" Background="#FFABF6E3" Click="SendButton_Click" ></Button>
        </Grid>
    </Grid>
</Window>
